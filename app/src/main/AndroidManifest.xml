<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.allu.attendancesystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity
            android:name=".ui.Faculty.MainActivity_Faculty"
            android:label="@string/title_activity_main__faculty"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.Student.MainActivity_Student"
            android:label="@string/title_activity_main__student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.Faculty.CreateStudentActivity"
            android:label="@string/title_activity_create_student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.Faculty.PostFeed"
            android:label="@string/title_activity_post_feed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.Faculty.PostAttendance"
            android:label="@string/title_activity_post_attendance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.Faculty.EnterAttendance" />
        <activity
            android:name=".ui.Student.ViewAttendanceActivity"
            android:label="@string/title_activity_view_attendance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.ViewFeed_Activity" />
        <activity android:name=".ui.SettingsActivity"></activity>
    </application>

</manifest>